<%- include("partials/header"); -%>

    <h1 class="center">Compose</h1>
    <form action="/compose" method="post">
        <div class="form-group">
            <label class="content">Enter Article Publishing Date</label>
            <input type="date" name="postDate" id="theDate"><br>
            <label class="content">Title</label>
            <input type="text" name="postTitle" class="form-control" autocomplete="off" required>
            <label class="content">Author Name</label>
            <input type="text" name="postAuthor" class="form-control" autocomplete="off" required>

            <label class="content">Post</label>
            <textarea name="postBody" id="editor" required></textarea>
            <label class="content">Enter YouTube Video Link</label>
            <input type="text" name="postLink" autocomplete="off"
                value="https://www.youtube.com/embed/<code>" allow="autoplay" size="50" class="youtube"><br>
            <label class="content">Enter Thumbnail Image Link (700 x 350)</label>
            <input type="text" name="postImgLink" autocomplete="off" value="https://drive.google.com/uc?export=view&id="
                size="50" class="img-link">
        </div>
        <button type="submit" class="btn btn-primary content">Publish</button>
    </form>
    <hr>
    <!-- <a href="/update" class="btn btn-primary">Delete previous posts.</a> -->
    <script>
        ClassicEditor
            .create(document.querySelector('#editor'))
            .then(editor => {
                console.log(editor);
            })
            .catch(error => {
                console.error(error);
            });
    </script>
    <script>
        var date = new Date();

        var day = date.getDate();
        var month = date.getMonth() + 1;
        var year = date.getFullYear();

        if (month < 10) month = "0" + month;
        if (day < 10) day = "0" + day;

        var today = year + "-" + month + "-" + day;
        document.getElementById("theDate").value = today;
    </script>

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Reporter ID Card No: <%= id %></title>
    <!-- Bootstrap CSS -->
    <link
      rel="stylesheet"
      href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"
    />
    <style>
      @import url("https://fonts.googleapis.com/css?family=Montserrat");
      /* Custom styles for ID card */
      .card {
        max-width: 480px;
        margin: auto;
        margin-top: 30px;
        box-shadow: 0px 0px 15px 0px rgba(0, 0, 0, 0.2);
      }
      .card-header {
        background-color: #d1edfc;
        padding-left: 0%;
        padding-right: 0%;
        border: 0;
      }
      .card-body {
        background-color: #d1edfc;
        text-align: left;
      }
      .employee-photo {
        display: block;
        margin: 0 auto;
        max-width: 100px;
        border: 2px solid #000000;
        margin-top: 0px;
        margin-bottom: 10px;
      }
      .employee-name {
        text-align: center;
        font-size: 15px;
        font-weight: bold;
        margin-bottom: 5px;
      }
      .employee-title {
        text-align: center;
        font-size: 14px;
        margin-bottom: 2px;
      }
      .employee-details {
        font-size: 14px;
      }
      .employee-details li {
        list-style: none;
        margin-bottom: 5px;
      }
      strong {
        margin-right: 3%;
      }
      .description {
        text-align: justify;
      }
      .qr {
        display: block;
        margin: 0 auto;
      }
      .outer-div {
        background-color: black;
        padding: 20px;
        text-align: center;
      }

      .footer {
        background-color: #ed1c24;
        color: #fff;
        text-align: center;
        font-size: xx-large;
        font-family: "Montserrat", sans-serif;
        font-weight: bold;
        letter-spacing: 20px;
        padding-top: 10px;
        padding-bottom: 10px;
      }
      .img {
        display: flex;
        justify-content: center;
        align-items: center;
      }

      @media print {
        .container-1 {
          margin-top: auto;
          margin-left: auto;
          margin-right: auto;
          page-break-after: always;
        }

        .container-2 {
          margin-top: auto;
          margin-left: auto;
          margin-right: auto;
          page-break-before: always;
        }
        body * {
          visibility: hidden;
        }
        .print,
        .print * {
          visibility: visible;
        }
        .logo {
          margin-bottom: 0px;
          padding-bottom: 0px;
        }
        .print {
          width: 100%;
          margin: 0;
          border: 2px solid #000000;
          text-align: center;
        }
      }
    </style>
  </head>
  <body>
    <div class="outer-div">
      <button onclick="window.print()">Print</button>
    </div>
    <div class="container-1">
      <div class="card">
        <div class="print">
          <div class="card-header">
            <img
              src="/assets/idHeader.svg"
              alt="NBTV Bharat Logo"
              width="100%"
              class="logo"
              style="
                background-color: #0000fd;
                border-bottom-left-radius: 100%;
                border-bottom-right-radius: 100%;
                margin-top: -3%;
              "
            />
          </div>
          <div class="card-body">
            <img src="<%= pic %>" alt="Employee Photo" class="employee-photo" />
            <div class="employee-name"><%= fullName %></div>
            <div class="employee-title"><%= designation %></div>
            <ul class="employee-details">
              <li><strong>ID:</strong><%= id %></li>
              <li><strong>Email:</strong><%= email %></li>
              <li><strong>Phone:</strong><%= contact %></li>
              <li><strong>Address:</strong><%= address %></li>
              <li><strong>Aadhaar No:</strong><%= aadhaar %></li>
              <li><strong>PAN Card No:</strong><%= pan %></li>
              <li><strong>Date of Issue:</strong>01/01/2023</li>
            </ul>
            <img id="qrcode" src="" alt="QR Code" class="qr" width="30%" />
          </div>
          <div class="footer">PRESS</div>
        </div>
        <hr />
      </div>
    </div>

    <div class="container-2">
      <div class="card">
        <div class="print">
          <div class="card-header">
            <img
              src="/assets/idHeader.svg"
              alt="NBTV Bharat Logo"
              width="100%"
              class="logo"
              style="
                background-color: #0000fd;
                border-bottom-left-radius: 100%;
                border-bottom-right-radius: 100%;
                margin-top: -3%;
              "
            />
          </div>
          <div class="card-body">
            <div class="employee-name">INSTRUCTION</div>
            <ul>
              <li>This ID Card is valid for 1 year from date of issue.</li>
              <li>This ID Card is not transferable.</li>
              <li>
                This ID is the property of company and must surrendered
                immediately upon cassation of employment.
              </li>
              <li>
                ID lost / theft should be reported immediately to the head of
                department issuing authority.
              </li>
              <li>
                Any one ﬁnding this ID card please return at address given
                overleaf.
              </li>
            </ul>
            <div class="img">
              <img
                src="/assets/idHeader.svg"
                alt="NBTV Bharat Logo"
                width="80%"
                class="logo"
                style="background-color: #0000fd;
                       border-radius: 100%;
                       margin: auto;"
              />
            </div>
            <p
              style="
                color: #0000fd;
                text-align: center;
                font-weight: bolder;
                font-size: xx-large;
              "
            >
              NEWS BOOK TV BHARAT
            </p>
            <p style="text-align: justify">
              <strong>Corporate Oﬃce:</strong> 414, B- wing, ORM, Orchid Mall,
              Royal Palms, Aarey Milk, Goregaon East, Mumbai - 400 065
              <br /><strong>Email ID:</strong>nbtvbharat24x7@gmail.com
            </p>
          </div>
          <div class="footer">PRESS</div>
        </div>
        <hr />
        <p class="description">
          This ID card serves as a legal form of identification for the employee
          named above and is issued by NBTV Bharat for company use only.
        </p>
      </div>
    </div>

    <!-- Bootstrap JS -->
    <script>
      var qrText = "nbtvbharat.co.in/verify-reporter/<%= id %>";
      var qrCodeUrl =
        "https://chart.googleapis.com/chart?cht=qr&chs=150x150&chl=" +
        encodeURIComponent(qrText);

      document.getElementById("qrcode").setAttribute("src", qrCodeUrl);

      // Function to print the page as a PDF file
      function printToPDF() {
        // Get the HTML content to be printed
        const content = document.querySelector(".inner-div").innerHTML;

        // Define the options for the PDF file
        const options = {
          margin: [0, 0, 0, 0], // top, right, bottom, left margins (in inches)
          filename: "<%= id %>.pdf", // name of the PDF file
          image: { type: "jpeg", quality: 1 }, // image format and quality
          html2canvas: { scale: 2 }, // scale of the HTML content to be printed
          jsPDF: { unit: "in", format: "letter", orientation: "portrait" }, // PDF format and orientation
        };

        // Use the html2pdf library to generate the PDF file
        html2pdf().set(options).from(content).save();
      }
    </script>
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
  </body>
</html>
